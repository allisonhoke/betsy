<p id="notice"><%= notice %></p>

<h1>ALL PRODUCTS INDEX</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= "#{product.name}" %></td>
        <td>Price: $<%= "#{(product.price)/100}" %>.00</td>
        <td><%= image_tag("#{product.photo_url}") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>


