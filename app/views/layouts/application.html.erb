<!DOCTYPE html>
<html>
<head>
  <title>Weebay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <section class ="row">
        <span class="small-4 medium-4 large-4 columns">
          <% if session[:merchant_id].nil? %>
          <li><%= link_to("Sign Up", "/auth/github", method: :get) %></li>
          <li><%= link_to("Sign In", "/auth/github", method: :get) %></li>
          <% else %>
          <li><%= link_to("Sign Out", sessions_path, method: :delete) %></li>
          <!-- <li><%# link_to("Account Page", merchant_path(merchant.id) %></li> -->
          <% end %>
        </span>
        <span class="small-4 medium-4 large-4 columns">
          <li><%= link_to("Shop All", products_path) %></li>
          <% Category.all.each do |category| %>
          <li><%= link_to(category.name, category_products_path(category.id)) %></li>
          <% end %>
        </span>
        <span class="small-4 medium-4 large-4 columns">
          <ul id="menu">
            <li><a href="#">Merchants</a>
              <ul>
                <% Merchant.all.each do |merchant| %>
                <li><%= link_to(merchant.username, merchant_products_path(merchant.id)) %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </span>
      </section>
    </nav>
  </header>
  <%= yield %>
</body>
</html>
